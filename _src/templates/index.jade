include mixins/carousel

- var mainMenuActiveIndex = -1;
- var brandName = "kastoria-interactive";
- var pageTitle = brandName;
doctype html
html
  head
    include partials/header
    script.
      var categories = {
        "BYZANTINA":"byzantina",
        "METABYZANTINA":"metabyzantina",
        "SYGXRONA":"sygxrona"
      }
      var env = "#{locals.env}";
      var FILTER = env==="production" ? "" : "#{locals.filter}";
    if locals.env==="production"
      style.
        .info-data {
          padding: 10px 30px;
        }
        .info-data-title h1 {
          font-size: 22px;
        }
        .info-data-description p {
          font-size: 16px;
        }

